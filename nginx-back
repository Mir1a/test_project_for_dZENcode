server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    server_name angro-popeye-backend.online www.angro-popeye-backend.online;

    #ssl_certificate     /etc/letsencrypt/live/angro-popeye-backend.online/fullchain.pem;
    #ssl_certificate_key /etc/letsencrypt/live/angro-popeye-backend.online/privkey.pem;
    #ssl_trusted_certificate /etc/letsencrypt/live/angro-popeye-backend.online/chain.pem;

    #ssl_dhparam /etc/letsencrypt/dhparams/dhparam.pem;

    #location ^~ /.well-known/acme-challenge {
    #    default_type text/plain;
    #    root /var/www/letsencrypt;
    #}

    location /static/ {
        alias /app/allstaticfiles/;
        expires 100d;
        gzip on;
        gzip_static on;
        gzip_vary on;
        gzip_types      text/plain text/css text/js application/javascript application/xml;
        gzip_proxied    no-cache no-store private expired auth;
        gzip_min_length 1000;
    }

    location /media/ {
        alias /app/media/;
        expires 100d;
    }

    location / {
        add_header Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0";
        add_header Pragma "no-cache";
        expires off;
        proxy_no_cache 1;
        proxy_cache_bypass 1;
        proxy_pass                              http://back:5000/;
        proxy_set_header X-Forwarded-For        $proxy_add_x_forwarded_for;
        proxy_set_header Host                   $host;
        proxy_set_header X-Real-IP              $remote_addr;
    }
}

server {
    listen 80;
    server_name angro-popeye-backend.online www.angro-popeye-backend.online;

    location / {
        return 301 https://$host$request_uri;
    }
}